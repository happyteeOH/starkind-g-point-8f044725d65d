<!--profile.wxml-->
<view class="page">
  <view class="padding-rem bottom-gray-border white-background userinfo-wrapper">
    <image class="user-avatar" src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
    <text class="user-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="bottom-gray-border white-background create-wrapper">
    <navigator class="padding-rem profile-navigator" url="../create/create">
      <view class="create-navigator-wrapper">
        <text class="opaque">+</text>
        <text id="create-event">创建事件</text>
      </view>
      <text class="opaque chevron">❯</text>
    </navigator>
  </view>
  <view class="bottom-gray-border white-background my-events-wrapper">
    <navigator class="padding-rem profile-navigator" url="../myList/myList">
      <text id="my-events" bindtap = "getMyEvents">我的事件</text>
      <text class="opaque chevron">❯</text>
    </navigator>
  </view>
</view>
